
pipeline {
    agent any
    tools {
        maven "MAVEN"
}
    stages {

        stage('Build') {
            steps {
                bat 'mvn clean install'
            }
        }
        stage('Test') {
            steps {
                bat 'mvn test'
            }
        }
        stage('Deploy') {
            steps {
                bat 'echo "Deploying application"'
            }
        }
    }
    post {
        always {
            echo 'Pipeline finished'
        }
    }
}